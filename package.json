{
  "name": "mvp-salon-app",
  "version": "1.0.0",
  "description": "Low-friction digital workflow tool for salon form processing",
  "scripts": {
    "start": "npx serve public -p 3000",
    "dev": "npx serve public -p 3000 --live-reload",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint public/**/*.js",
    "format": "prettier --write public/**/*.{js,html,css}"
  },
  "keywords": ["form-processing", "ocr", "n8n", "mobile-first"],
  "author": "MVP Salon Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "serve": "^14.2.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "public/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": ["eslint:recommended"],
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off"
    }
  }
}